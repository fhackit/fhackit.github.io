<div class="loading__container">
    <div class="loading__message">Loading . . .</div>
    <div class="dynamic__content" style="display: none;">
        <slot />
    </div>
</div>

<script>
    let isLoading = true;

    // This function will run only in the browser
    if (import.meta.env.SSR === false) {
        setTimeout(() => {
            isLoading = false;

            // Update the DOM manually to hide the loading message
            const loadingMessage = document.querySelector('.loading__message');
            const content = document.querySelector('.dynamic__content') as HTMLElement;

            if (loadingMessage && content) {
                (loadingMessage as HTMLElement).style.display = 'none';
                content.style.display = 'flex'; // Make sure the content is visible
            }
        }, 2000); // Simulate a 2-second load
    }
</script>

<style>
    .loading__container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full viewport height */
        width: 100%;   /* Full width */
        flex-direction: column;
    }

    .loading__message {
        color: #39ff14; /* Neon green */
        font-size: 2em;
        font-weight: bold;
        text-align: center;
    }

    .dynamic__content {
        /* Border styling */
        border: 0.01em solid #37ff142a;
        margin: 1em;
        padding: 0.5em;
        text-align: left;

        /* Stretch to fill space */
        flex: 1;
        display: flex;
        flex-direction: column;
    }
</style>
